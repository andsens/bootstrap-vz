{
	"provider": "kvm",
	"bootstrapper": {
		"workspace":      "/target",
		"mirror": "http://ftp.fr.debian.org/debian/"
	},
	"image": {
		"name":        "debian-{system.release}-{system.architecture}-{%y}{%m}{%d}",
		"description": "Debian {system.release} {system.architecture}"
	},
	"system": {
		"release":      "wheezy",
		"architecture": "amd64",
		"bootloader":   "grub",
		"timezone":     "UTC",
		"locale":       "en_US",
		"charmap":      "UTF-8"
	},
	"packages": {},
	"volume": {
		"backing": "raw",
		"partitions": {
			"type": "msdos",
			"boot": {
				"size":       "32MiB",
				"filesystem": "ext2"
			},
			"root": {
				"size":       "864MiB",
				"filesystem": "ext4"
			},
			"swap": {"size": "128MiB"}
		}
	},
	"plugins": {
		"root_password": {
			"enabled": true,
			"password": "test"
		}
	}
}
