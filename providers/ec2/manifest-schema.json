{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "EC2 manifest",
	"type": "object",
	"properties": {
		"virtualization": { "enum": ["pvm", "hvm"] },
		"image": {
			"type": "object",
			"properties": {
				"description": {
					"type": "string"
				}
			}
		},
		"credentials": {
			"type": "object",
			"properties": {
				"access-key": {
					"type": "string"
				},
				"secret-key": {
					"type": "string"
				}
			}
		},
		"system": {
			"type": "object",
			"properties": {
				"bootloader": {
					"type": "string",
					"enum": ["pvgrub", "extlinux"]
				}
			}
		},
		"volume": {
			"type": "object",
			"properties": {
				"backing": { "enum": ["ebs", "s3"] },
				"partitions": {
					"type": "object",
					"properties": {
						"type": { "enum": ["none", "msdos"] }
					}
				}
			},
			"required": ["backing"]
		}
	},
	"required": ["image"]
}
