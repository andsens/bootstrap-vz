{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Prebootstrapped plugin manifest",
	"type": "object",
	"properties": {
		"volume": {
			"type": "object",
			"properties": {
				"backing": {
					"type": "string",
					"enum": ["raw", "ebs", "s3", "vdi", "vmdk"]
				}
			},
			"required": ["backing"]
		},
		"plugins": {
			"type": "object",
			"properties": {
				"prebootstrapped": {
					"type": "object",
					"properties": {
						"snapshot": {
							"type": "string"
						},
						"image": {
							"type": "string"
						}
					}
				}
			}
		}
	},
	"required": ["volume"]
}
